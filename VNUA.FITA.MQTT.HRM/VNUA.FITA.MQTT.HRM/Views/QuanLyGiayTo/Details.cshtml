@model VNUA.FITA.MQTT.HRM.Data.Model.GiayTo

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
    body {
        background: #f2f2f2;
    }

    .card {
        box-shadow: 0 20px 27px 0 rgb(0 0 0 / 5%);
    }

    .card {
        position: relative;
        display: flex;
        flex-direction: column;
        min-width: 0;
        word-wrap: break-word;
        background-color: #fff;
        background-clip: border-box;
        border: 0 solid rgba(0,0,0,.125);
        border-radius: 1rem;
    }

    .text-reset {
        --bs-text-opacity: 1;
        color: inherit !important;
    }

    a {
        color: #5465ff;
        text-decoration: none;
    }
</style>
<div class="container-fluid">
    <h1 class="mt-4">Chi tiết đơn</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
        <li class="breadcrumb-item active"> Lịch sử đơn đã gửi</li>
        <li class="breadcrumb-item active"> @Html.DisplayFor(model => model.TenGT) + @(Html.DisplayFor(model => model.MaGT)) </li>
    </ol>
</div>
<div class="container-fluid">

    <div class="container">

        <!-- Main content -->
        <div class="row">
            <div class="col-lg-8">
                <!-- Details -->
                <div class="card mb-4">
                    <div class="card-body">
                        <!-- Title -->
                        <div class="d-flex justify-content-between align-items-center py-3">
                            <strong style="font-size:20px;">@Model.TenGT (<span class="me-3">#@Html.DisplayFor(model => model.MaGT)</span>)</strong>
                        </div>

                        <div class="mb-3 d-flex justify-content-between">
                            <div>
                                <span class="me-3"> @Html.DisplayFor(model => model.ThoiGian)</span>
                                @if (Model.TrangThai.Equals("Chờ duyệt") && Model.Anh != null)
                                {
                                    <span class="badge rounded-pill  badge-warning">@Html.DisplayFor(model => model.TrangThai)</span>
                                }
                                else if (Model.TrangThai.Equals("Đã được duyệt"))
                                {
                                    <span class="badge rounded-pill  badge-success">@Html.DisplayFor(model => model.TrangThai)</span>
                                }
                                else if (Model.TrangThai.Equals("Đã Hủy"))
                                {
                                    <span class="badge rounded-pill badge-danger">@Html.DisplayFor(model => model.TrangThai)</span>
                                }
                            </div>
                            <div class="d-flex">

                                <div class="dropdown">
                                    <button class="btn btn-link p-0 text-muted" type="button" data-bs-toggle="dropdown">
                                        <i class="bi bi-three-dots-vertical"></i>
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end">
                                        <li><a class="dropdown-item" href="#"><i class="bi bi-pencil"></i> Edit</a></li>
                                        <li><a class="dropdown-item" href="#"><i class="bi bi-printer"></i> Print</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <table class="table table-borderless">
                            <tbody>
                                <dl class="row" style="margin:auto;">
                                    <dd class="col-sm-10">
                                        <img src="@Html.DisplayFor(model => model.Anh)" alt="Ảnh Giấy tờ" class="rounded" height="600" width="430">
                                        
                                    </dd>
                                </dl>
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- Payment -->
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="row">
                           
                            <div class="col-lg-6">
                                <h3 class="h6">Thông tin người gửis</h3>
                                <address>
                                    <strong>Họ Tên :@TempData["HoTen"]</strong><br>
                                    <strong>Chức vụ  : @TempData["ChucVu"]</strong>
                                    <br>
                                    <strong>Bộ phận : @TempData["Bophan"]</strong>
                                </address>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="col-lg-4">
                <!-- Customer Notes -->
                <div class="card mb-4">
                    <div class="card-body">
                        <h3 class="h6">Ghi chú</h3>
                        <p>@Html.DisplayFor(model => model.TenGT)</p>
                    </div>
                </div>
                <div class="card mb-4">
                    <!-- Shipping information -->
                    
                <form style="margin-bottom:15px;">
                    <div>


                        @if (Model.TrangThai.Equals("Chờ duyệt"))
                        {
                            <button class="btn btn-primary  btn-sm" asp-action="Delete" asp-route-id="@Model.MaGT">Duyệt</button>
                        }

                        <button class="btn btn-light btn-sm" asp-action="#" value="Hủy">Danh sách đơn từ</button>

                    </div>
                </form>
            </div>
        </div>
    </div>

</div>







