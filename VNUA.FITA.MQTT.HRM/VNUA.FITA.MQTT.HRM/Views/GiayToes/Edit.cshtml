@model VNUA.FITA.MQTT.HRM.Data.Model.GiayTo

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <h1 class="mt-4">Sửa giấy tờ</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
        <li class="breadcrumb-item active"><a asp-controller="GiayTos" asp-action="Index">Danh sách giấy tờ</a></li>
        <li class="breadcrumb-item active">@Html.DisplayFor(model => model.TenGT)</li>
    </ol>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaGT" />
            <div class="form-group">
                <label asp-for="TenGT" class="control-label">Tên giấy tờ</label>
                <input asp-for="TenGT" class="form-control" />
                <span asp-validation-for="TenGT" class="text-danger"></span>
            </div>
            <div class="form-group ">
                <label class="control-label">Ảnh</label>
                <input class="form-control" type="file" name="formfile" />

            </div>
            <div class="form-group">
                <label asp-for="ThoiGian" class="control-label">Thời gian</label>
                <input asp-for="ThoiGian" class="form-control" value="@DateTime.Now.Date" type="datetime" disabled />
                <span asp-validation-for="ThoiGian" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TrangThai" class="control-label">Trạng thái</label>
                <input asp-for="TrangThai" class="form-control" disabled/>
                <span asp-validation-for="TrangThai" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdNhanVien" class="control-label"></label>
                <select asp-for="IdNhanVien" class="form-control" asp-items="ViewBag.IdNhanVien"></select>
                <span asp-validation-for="IdNhanVien" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Trở lại danh sách</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
