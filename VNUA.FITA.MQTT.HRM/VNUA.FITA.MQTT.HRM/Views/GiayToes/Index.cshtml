@model IEnumerable<VNUA.FITA.MQTT.HRM.Data.Model.GiayTo>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h1 class="mt-4">Danh sách giấy tờ</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
        <li class="breadcrumb-item active"> Giấy tờ</li>
    </ol>
</div>
<p>
    <a asp-action="Create" style="margin-left:20px;">Bổ sung giấy tờ</a>
</p>
<body>
<table class="table table-hover table-striped table-head-bg-primary" style="text-align:center;">
    <thead>
        <tr>
            <th>
                <span>Tên giấy tờ</span>
            </th>
            <th>
                <span>Ảnh</span>
            </th>
            <th>
                <span>Thời gian</span>
            </th>
            <th>
                <span>Trạng thái</span>
            </th>
            <th hidden>
                @Html.DisplayNameFor(model => model.NhanViens)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            var tm = "#myModal" + item.MaGT;
            var mid = "myModal" + item.MaGT;
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TenGT)
                </td>
                <td>
                    <img src="@("../assets/img/"+item.Anh)" alt="Alternate Text" style="width:200px; height:200px;" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ThoiGian)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TrangThai)
                </td>
                <td hidden>
                    @Html.DisplayFor(modelItem => item.NhanViens.IdNhanVien)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.MaGT">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.MaGT">Details</a> |
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="@tm">
                        Delete
                    </button>
                </td>
            </tr>

            <div class="modal fade" id="@mid" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                            <h4 class="modal-title" id="myModalLabel">Delete Confirmation</h4>
                        </div>
                        <div class="modal-body">
                            Are you sure want to delete this item?
                        </div>
                        <form asp-action="Delete">
                            <div class="modal-footer">
                                <input type="hidden" asp-for="@item.MaGT" />
                                <input type="submit" value="Delete" class="btn btn-danger" />
                            </div>
                            </form>
                    </div>
                </div>
            </div>

        }
    </tbody>
</table>

    </body>