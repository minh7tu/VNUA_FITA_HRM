@model VNUA.FITA.MQTT.HRM.Data.Model.NhanVien

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Thay đổi chức vụ</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdNhanVien" />
            <div class="form-group">
                <label asp-for="MaNhanVien" class="control-label"></label>
                <input asp-for="MaNhanVien" class="form-control" />
                <span asp-validation-for="MaNhanVien" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HoTen" class="control-label"></label>
                <input asp-for="HoTen" class="form-control" />
                <span asp-validation-for="HoTen" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TenTaiKhoan" class="control-label" hidden></label>
                <input asp-for="TenTaiKhoan" class="form-control" hidden />
                <span asp-validation-for="TenTaiKhoan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NgaySinh" class="control-label" hidden></label>
                <input asp-for="NgaySinh" class="form-control" hidden />
                <span asp-validation-for="NgaySinh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GioiTinh" class="control-label" hidden></label>
                <input asp-for="GioiTinh" class="form-control" hidden />
                <span asp-validation-for="GioiTinh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiaChi" class="control-label" hidden></label>
                <input asp-for="DiaChi" class="form-control" hidden />
                <span asp-validation-for="DiaChi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SDT" class="control-label" hidden></label>
                <input asp-for="SDT" class="form-control"  hidden/>
                <span asp-validation-for="SDT" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label" hidden></label>
                <input asp-for="Email" class="form-control" hidden/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MatKhau" class="control-label" hidden></label>
                <input asp-for="MatKhau" class="form-control" hidden/>
                <span asp-validation-for="MatKhau" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhanQuyen" class="control-label" hidden></label>
                <input asp-for="PhanQuyen" class="form-control" hidden/>
                <span asp-validation-for="PhanQuyen" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ChucVu" class="control-label"></label>
                <input asp-for="ChucVu" class="form-control" />
                <span asp-validation-for="ChucVu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Anh" class="control-label" hidden></label>
                <input asp-for="Anh" class="form-control" hidden/>
                <span asp-validation-for="Anh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SoCCCD" class="control-label" hidden></label>
                <input asp-for="SoCCCD" class="form-control" hidden/>
                <span asp-validation-for="SoCCCD" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TrinhDo" class="control-label" hidden></label>
                <input asp-for="TrinhDo" class="form-control" hidden/>
                <span asp-validation-for="TrinhDo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdBP" class="control-label" ></label>
                <input asp-for="IdBP" class="form-control" asp-items="ViewBag.IdBP"/>
                <span asp-validation-for="IdBP" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Thay đổi chức vụ" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Quay lại</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
