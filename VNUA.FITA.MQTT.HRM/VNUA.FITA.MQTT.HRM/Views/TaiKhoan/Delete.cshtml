@model VNUA.FITA.MQTT.HRM.Data.Model.NhanVien

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a asp-controller="TaiKhoan" asp-action="Delete">Danh sách tài khoản</a></li>
    <li class="breadcrumb-item active">Xóa tài khoản</li>
</ol>
<hr />

<h3>Bạn có muốn xóa thông tin tài khoản này?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">
           Mã Nhân Viên:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaNhanVien)
        </dd>
        <dt class="col-sm-2">
            Họ Tên:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HoTen)
        </dd>
        <dt class="col-sm-2">
            Số Điện Thoại:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SDT)
        </dd>
        <dt class="col-sm-2">
           Email:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            Tên Tài Khoản:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TenTaiKhoan)
        </dd>
        <dt class="col-sm-2">
           Mật Khẩu:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MatKhau)
        </dd>
        <dt class="col-sm-2">
            Phân Quyền:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PhanQuyen)
        </dd>
        <dt class="col-sm-2">
           Chức Vụ:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ChucVu)
        </dd>
        
        <dt class="col-sm-2" hidden>
            @Html.DisplayNameFor(model => model.BoPhans)
        </dt>
        <dd class="col-sm-10" hidden>
            @Html.DisplayFor(model => model.BoPhans.IdBoPhan)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IdNhanVien" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Quay lại danh sách</a>
    </form>
</div>
</div>

