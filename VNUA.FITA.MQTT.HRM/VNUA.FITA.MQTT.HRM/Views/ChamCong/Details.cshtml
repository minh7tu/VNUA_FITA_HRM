@model VNUA.FITA.MQTT.HRM.Data.Model.ChamCong

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-controller="ChamCong" asp-action="Index">Chấm Công</a></li>
        <li class="breadcrumb-item active">Chi tiết chấm công</li>
    </ol>
    <hr />
    <div>
        <dl class="row">
            <dt class="col-sm-2">
                 Nhân Viên:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NhanViens.IdNhanVien)
            </dd>
            <dt class="col-sm-2">
                Thời Gian:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ThoiGian)
            </dd>
            <dt class="col-sm-2">
                Trạng Thái:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TrangThai)
            </dd>
            <dt class="col-sm-2">
                Ghi Chú:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.GhiChu)
            </dd>

        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.IdCong" class="btn btn-outline-primary btn-sm">Chỉnh Sửa</a> |
        <a asp-action="Index"  class="btn btn-sm btn-outline-secondary">Quay lại danh sách chấm công</a>
    </div>
</div>