@model VNUA.FITA.MQTT.HRM.Data.Model.ChamCong

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-controller="ChamCong" asp-action="Index">Chấm Công</a></li>
        <li class="breadcrumb-item active">Chỉnh sửa thông tin chấm công</li>
    </ol>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="IdCong" />
                <div class="form-group">
                    <label asp-for="IdNhanVien" class="control-label">Nhân Viên</label>
                    <select asp-for="IdNhanVien" class="form-control" asp-items="ViewBag.IdNhanVien"></select>
                    <span asp-validation-for="IdNhanVien" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ThoiGian" class="control-label">Thời Gian:</label>
                    <input asp-for="ThoiGian" class="form-control" />
                    <span asp-validation-for="ThoiGian" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TrangThai" class="control-label">Trạng Thái:</label>
                    <input asp-for="TrangThai" class="form-control" />
                    <span asp-validation-for="TrangThai" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="GhiChu" class="control-label">Ghi Chú:</label>
                    <input asp-for="GhiChu" class="form-control" />
                    <span asp-validation-for="GhiChu" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <input type="submit" value="Lưu Lại" class="btn btn-outline-primary btn-sm" />|
                    <a asp-action="Index" class="btn btn-sm btn-outline-secondary">Quay lại danh sách chấm công</a>
                </div>
            </form>
        </div>
    </div>

   
</div>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
